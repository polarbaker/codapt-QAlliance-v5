# Application Environment
NODE_ENV=development
BASE_URL=http://localhost:8000

# Authentication
ADMIN_PASSWORD=your-secure-admin-password-here
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres/app

# Node.js Memory Optimization (recommended for image processing)
NODE_OPTIONS=--max-old-space-size=3072 --expose-gc
UV_THREADPOOL_SIZE=4
MALLOC_ARENA_MAX=2

# Sharp Image Processing Configuration
SHARP_IGNORE_GLOBAL_LIBVIPS=1
SHARP_CONCURRENCY=1
SHARP_CACHE_SIZE=0

# Enhanced Upload Configuration
UPLOAD_MAX_FILE_SIZE=200              # Maximum file size in MB for standard upload
UPLOAD_CHUNK_SIZE=2                   # Default chunk size in MB for progressive uploads
UPLOAD_MAX_CHUNKS=100                 # Maximum number of chunks per file
UPLOAD_TIMEOUT=300000                 # Upload timeout in milliseconds (5 minutes)
UPLOAD_RETRY_ATTEMPTS=3               # Number of retry attempts for failed uploads
UPLOAD_RETRY_DELAY=2000               # Base retry delay in milliseconds

# Progressive Upload Configuration
PROGRESSIVE_UPLOAD_THRESHOLD=25       # File size threshold in MB to trigger progressive upload
PROGRESSIVE_UPLOAD_SESSION_TIMEOUT=1800000  # Session timeout in milliseconds (30 minutes)

# Memory and Performance Settings
IMAGE_PROCESSING_MEMORY_LIMIT=2048    # Memory limit in MB for image processing
IMAGE_PROCESSING_MAX_CONCURRENT=2     # Maximum concurrent image processing operations
IMAGE_PROCESSING_TIMEOUT=300000       # Image processing timeout in milliseconds

# Monitoring and Logging
ENABLE_UPLOAD_MONITORING=true         # Enable detailed upload monitoring
ENABLE_DETAILED_LOGGING=false         # Enable detailed debug logging (use sparingly in production)
MEMORY_CHECK_INTERVAL=30000           # Memory check interval in milliseconds

# Server Configuration
PORT=3000
LISTEN_IP=127.0.0.1
LISTEN_PORT=8000

# Development Settings
# Uncomment for additional debugging
# DEBUG=*
# NODE_DEBUG=fs,net,tls
